int circunferencia (int r,float pi);
#include <iostream>
using namespace std;

int main ()
{
	int r,a,c,d;
	float pi = 3.1416;
	cout << "Ingresar el radio de la circunferencia: ";
	cin >> r;
	circunferencia (r,pi);
}
int circunferencia (int r,float pi)
 {
 	float longitud=2*pi*r;
 	cout << "Longitud: " << longitud << endl;
 	return 0;
 }
